{
  "appInfo": {
    "name": "My App",
    "version": "1.0.0",
    "description": "My App Description"
  },
  "deployment": {
    "env": "dev",
    "host": "localhost",
    "port": 8080
  },
  "debug": {
    "debugPort": 5858,
    "logLevel": "info",
    "logDir": "logs",
    "logFile": "app.log",
    "socket": {
      "port": 6000,
      "host": "localhost",
      "protocol": "tcp"
    },
    "instrumentation": {
      "enabled": true,
      "dataCaptureLevel": "full"
    },
    "performanceMetrics": {
      "capture": true,
      "endpoint": "http://localhost:8080/metrics"
    }
  }
}
