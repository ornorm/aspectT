{
  "compilerOptions": {
    "target": "ES6",
    "module": "es2020",
    "lib": ["ES6", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../../",
    "paths": {
      "@ornorm": ["./bin/types/ornorm"],
      "@ornorm/*": ["./bin/types/ornorm/*"],
      "@ornorm/aspectT": ["./bin/types/ornorm/aspectT"],
      "@ornorm/aspectT/*": ["./bin/types/ornorm/aspectT/*"]
    },
    "outDir": "./dist/printf_cli",
    "rootDir": "."
  },
  "include": ["./**/*"],
  "exclude": ["src", "config", "dist", "docs", "logs", "node_modules"]
}
